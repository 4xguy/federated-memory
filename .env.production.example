# Production Environment Configuration
# Copy this to .env.production and fill in the values

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
BASE_URL=https://your-domain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/federated_memory_prod?schema=public

# OpenAI Configuration
OPENAI_API_KEY=sk-...

# Authentication
JWT_SECRET=your-strong-random-jwt-secret-here
SESSION_SECRET=your-strong-random-session-secret-here
NEXTAUTH_SECRET=your-strong-random-nextauth-secret-here
NEXTAUTH_URL=https://your-domain.com

# Redis (Optional but recommended for production)
REDIS_URL=redis://username:password@host:6379

# OAuth Configuration (if using social login)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@your-domain.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-frontend.com,https://claude.ai

# Feature Flags
ENABLE_REDIS_CACHE=true
ENABLE_REALTIME=true
ENABLE_OAUTH=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json