{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKER",
    "watchPatterns": [
      "app/**",
      "components/**",
      "package.json",
      "next.config.js"
    ]
  },
  "deploy": {
    "startCommand": "npm run start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "numReplicas": 1,
    "region": "us-west1"
  },
  "environments": {
    "production": {
      "NODE_ENV": "production",
      "PORT": "3000"
    }
  }
}